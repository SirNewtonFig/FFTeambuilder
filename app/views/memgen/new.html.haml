- n = params[:n].present? ? params[:n].to_i : 1

.w-full.sticky.py-4.top-0{ class: 'bg-black/75' }
  .mx-auto.max-w-full.md:max-w-screen-md.2xl:max-w-screen-2xl{ class: 'xl:max-w-[72rem]'}
    .mx-4.flex.items-center.justify-between
      .text-white.text-xl.font-semibold Memcard Generator
      .flex.space-x-4
        = render 'memgen/add_slot_button', i: n
        %button.focus:outline-none.text-white.focus:ring-4.font-medium.rounded-lg.text-sm.px-5.bg-green-600.hover:bg-green-700.focus:ring-green-800{class: "py-2.5", type: "submit", form: 'memgen-form' } Generate

.mx-auto.mb-4.max-w-full.md:max-w-screen-md.2xl:max-w-screen-2xl{ class: 'xl:max-w-[72rem]'}
  = form_with(url: memgen_path, method: :post, multipart: true, id: 'memgen-form', data: { turbo: false }) do
    #slots.flex.flex-wrap
      - n.times do |i|
        = render 'memgen/slot', i: i
