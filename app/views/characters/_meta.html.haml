
#meta.p-2.flex-1.flex.bg-menu-texture.border-2.border-menu-dark{ class: 'h-[7.25rem]' }
  .my-auto.group
    = link_to(character_zodiacs_path(character_id: params[:id]), data: { turbo_frame: 'modal' }, class: 'w-24 text-center flex flex-col items-center justify-between hover:contrast-75 cursor-pointer') do
      = image_tag("zodiacs/#{char.zodiac}.png", class: 'h-16 contrast-[.35]')
      .text-sm.mt-2.text-center.border-b-2.border-transparent.group-hover:border-menu-dark= char.zodiac.titleize

  .ml-4.space-y-2.flex.flex-col.justify-between
    %input.text-xl.bg-right.py-0.px-0.bg-transparent.border-0.border-b-2.border-transparent.hover:border-menu-dark.appearance-none.focus:outline-none.focus:ring-0.focus:border-menu-dark.peer{ type: 'text', name: 'character[name]', value: char.name, data: { action: 'change->form#submit' } }
    
    .flex.space-x-2
      %select.bg-right.cursor-pointer.w-24.py-0.px-0.bg-transparent.border-0.border-b-2.border-transparent.hover:border-menu-dark.appearance-none.focus:outline-none.focus:ring-0.focus:border-menu-dark.peer{ name: 'character[sex]', data: { action: 'change->form#submit' } }
        %option{ selected: ('selected' if char.sex == 'm'), value: 'm' } Male
        %option{ selected: ('selected' if char.sex == 'f'), value: 'f' } Female
        %option{ selected: ('selected' if char.sex == 'x'), value: 'x' } Monster

      %select.bg-right.cursor-pointer.flex-1.py-0.px-0.bg-transparent.border-0.border-b-2.border-transparent.hover:border-menu-dark.appearance-none.focus:outline-none.focus:ring-0.focus:border-menu-dark.peer{ name: 'character[job]', data: { action: 'change->form#submit' } }
        - jobs = char.sex == 'x' ? Job.monster.order(:id) : Job.generic.order(:id)
        - jobs.map do |job|
          %option{ selected: ('selected' if job == char.job), value: job.id }= job.name

    .flex.space-x-4
      %div
        %label.mr-1{ for: 'brave' } Brave
        %input#brave.bg-right.w-10.py-0.px-0.bg-transparent.border-0.border-b-2.border-transparent.hover:border-menu-dark.appearance-none.focus:outline-none.focus:ring-0.focus:border-menu-dark.peer{ type: 'number', max: 70, min: 40, name: 'character[brave]', value: char.brave.to_i, data: { action: 'change->form#submit' } }
      %div
        %label.mr-1{ for: 'faith' } Faith
        %input#faith.bg-right.w-10.py-0.px-0.bg-transparent.border-0.border-b-2.border-transparent.hover:border-menu-dark.appearance-none.focus:outline-none.focus:ring-0.focus:border-menu-dark.peer{ type: 'number', max: 70, min: 40, name: 'character[faith]', value: char.faith.to_i, data: { action: 'change->form#submit' } }
