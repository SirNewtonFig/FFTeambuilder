.-mx-2.px-2.py-3.space-y-1.cursor-pointer{ class: 'hover:bg-menu-dark/25' }
  .flex.justify-between.items-center
    .flex.items-center.space-x-2
      .text-lg= skill.name
      %span.text-gray-700 (#{skill.job.skillset})

    .flex
      .ml-2.text-cyan-900
        #{skill.jp_cost} JP

  .flex.flex-wrap
    .flex.mr-6
      .text-red-900 Effect:
      .ml-2= skill.data['formula']

  - if skill.data['element'].present?
    .flex.flex-wrap
      .flex.mr-6
        .text-red-900 Element:
        .ml-2= skill.data['element']

  .flex.flex-wrap
    - ['mp', 'ct', 'range', 'area', 'vert', 'target'].each do |prop|
      - next if skill.data[prop].blank?
      .flex.mr-6
        .text-red-900.capitalize #{stat_label(prop)}:
        .ml-2= skill.data[prop]

    .flex.mr-6
      .text-red-900.capitalize Evade:
      .ml-2= (evade = skill.data['evade']).present? ? evade : 'No'

  .flex.flex-wrap
    - ['silence', 'counter', 'counter_flood', 'counter_magic'].each do |prop|
      .flex.mr-6
        .text-red-900.capitalize #{stat_label(prop)}:
        .ml-2= skill.data[prop].present? ? 'Yes' : 'No'
    
  
