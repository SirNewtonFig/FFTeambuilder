.m-2.md:m-4.flex.space-x-3.max-w-5xl
  .flex.flex-col.space-y-3
    = turbo_frame_tag(:slot_1_summary) do
      = link_to(edit_character_path(id: 0), data: { turbo_frame: 'character_editor' }) do
        = render 'characters/summary', selected: true, char: @team.characters[0], i: 0

    = turbo_frame_tag(:slot_2_summary) do
      = link_to(edit_character_path(id: 1), data: { turbo_frame: 'character_editor' }) do
        = render 'characters/summary', char: @team.characters[1], i: 1

    = turbo_frame_tag(:slot_3_summary) do
      = link_to(edit_character_path(id: 2), data: { turbo_frame: 'character_editor' }) do
        = render 'characters/summary', char: @team.characters[2], i: 2

    = turbo_frame_tag(:slot_4_summary) do
      = link_to(edit_character_path(id: 3), data: { turbo_frame: 'character_editor' }) do
        = render 'characters/summary', char: @team.characters[3], i: 3
  
  = turbo_frame_tag(:character_editor, src: edit_character_path(id: 0))

  .space-y-4.flex.flex-col
    = link_to(download_team_path(@team), class: 'flex items-center group') do
      %button.border.border-gray-500.text-gray-300.rounded-full.p-1.group-hover:border-gray-400.grouphover:text-gray-200
        %svg.w-5.h-5{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
          %path{d: "M9 13.5l3 3m0 0l3-3m-3 3v-6m1.06-4.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
      .ml-2.text-gray-300.group-hover:text-gray-200 Save

    = form_with(url: teams_path, multipart: true, data: { controller: 'form' }) do
      %label.flex.items-center.group.cursor-pointer{ for: 'upload-team' }
        %button.border.border-gray-500.text-gray-300.rounded-full.p-1.group-hover:border-gray-400.grouphover:text-gray-200
          %svg.w-5.h-5{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
            %path{d: "M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
        .ml-2.text-gray-300.group-hover:text-gray-200 Load
        %input#upload-team.hidden{ type: 'file', name: 'team_file', accept: '.yml', data: { action: 'form#submit' } }

    = link_to(team_path(@team), class: 'flex items-center group', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to reset your team?' }) do
      .border.border-gray-500.text-gray-300.rounded-full.p-1.group-hover:border-gray-400.grouphover:text-gray-200
        %svg.w-5.h-5{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
          %path{d: "M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
      .ml-2.text-gray-300.group-hover:text-gray-200 Clear

    -# TODO: implement a JP summary overlay
